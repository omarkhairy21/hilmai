---
// Navbar component with logo and navigation
const currentPath = Astro.url.pathname;

interface NavLink {
  label: string;
  href: string;
}

const navLinks: NavLink[] = [
  { label: 'Home', href: '/' },
  { label: 'About', href: '/about' },
  { label: 'Tools', href: '/tools' },
  { label: 'Pricing', href: '/pricing' },
  { label: 'Blog', href: '/blog' },
];
---

<nav class="sticky top-0 z-50 bg-black/80 backdrop-blur-md border-b border-gray-800">
  <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
      <img src="/logo.png" alt="hilm.ai" class="h-8 w-auto" />
      <span class="text-xl font-bold text-white hidden sm:inline">hilm.ai</span>
    </a>

    <!-- Desktop Navigation Links -->
    <div class="hidden md:flex items-center gap-8">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class={`text-sm font-medium transition-colors ${
            currentPath === link.href
              ? 'text-white'
              : 'text-gray-400 hover:text-white'
          }`}
        >
          {link.label}
        </a>
      ))}
    </div>

    <!-- Desktop CTA Button -->
    <div class="hidden md:block">
      <a
        href="https://t.me/hilmaibot"
        target="_blank"
        rel="noopener noreferrer"
        class="px-4 py-2 bg-white text-black font-semibold rounded-lg hover:bg-gray-100 transform hover:scale-105 transition-all shadow-lg shadow-white/20 text-sm"
      >
        Open Bot
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-button"
      class="md:hidden p-2 text-white hover:text-gray-300 transition-colors"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <svg
        id="menu-icon"
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        ></path>
      </svg>
      <svg
        id="close-icon"
        class="w-6 h-6 hidden"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"
        ></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden border-t border-gray-800 bg-black/95 backdrop-blur-md"
  >
    <div class="max-w-6xl mx-auto px-4 py-4 space-y-4">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class={`block text-base font-medium transition-colors py-2 ${
            currentPath === link.href
              ? 'text-white'
              : 'text-gray-400 hover:text-white'
          }`}
        >
          {link.label}
        </a>
      ))}
      <a
        href="https://t.me/hilmaibot"
        target="_blank"
        rel="noopener noreferrer"
        class="block w-full text-center px-4 py-2 bg-white text-black font-semibold rounded-lg hover:bg-gray-100 transition-all shadow-lg shadow-white/20 text-sm mt-4"
      >
        Open Bot
      </a>
    </div>
  </div>
</nav>

<style>
  nav {
    position: sticky;
    top: 0;
    z-index: 50;
  }

  #mobile-menu {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out, opacity 0.3s ease-out;
    opacity: 0;
  }

  #mobile-menu.open {
    max-height: 500px;
    opacity: 1;
  }
</style>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  if (menuButton && mobileMenu && menuIcon && closeIcon) {
    menuButton.addEventListener('click', () => {
      const isOpen = mobileMenu.classList.toggle('open');
      mobileMenu.classList.toggle('hidden');
      
      // Toggle icons
      menuIcon.classList.toggle('hidden', isOpen);
      closeIcon.classList.toggle('hidden', !isOpen);
      
      // Update aria-expanded
      menuButton.setAttribute('aria-expanded', isOpen.toString());
    });

    // Close menu when clicking on a link
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach((link) => {
      link.addEventListener('click', () => {
        mobileMenu.classList.remove('open');
        mobileMenu.classList.add('hidden');
        menuIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        menuButton.setAttribute('aria-expanded', 'false');
      });
    });
  }
</script>
