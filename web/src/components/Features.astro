---
// Features section
const features = [
  {
    iconPath: 'M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12', // Upload
    title: 'Track Expenses Your Way',
    description: 'Send text messages, voice notes, or receipt photos. Our AI understands them all and automatically logs your transactions.',
    comingSoon: false
  },
  {
    iconPath: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z', // Lightbulb
    title: 'Personalized Financial Advice',
    description: 'Get tailored recommendations based on your spending patterns, savings goals, and financial behavior.',
    comingSoon: false
  },
  {
    iconPath: 'M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9', // Bell
    title: 'Stay on Track with Smart Alerts',
    description: 'Receive daily spending summaries and weekly financial reports delivered right to your Telegram.',
    comingSoon: true
  },
  {
    iconPath: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z', // Bar chart
    title: 'Set & Monitor Budgets',
    description: 'Create custom budgets for different categories. Get real-time alerts when you are approaching your limits.',
    comingSoon: true
  },
];
---

<section id="features" class="py-20 px-4 bg-gradient-to-b from-black to-gray-900">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Everything You Need to
        <span class="bg-gradient-to-r from-[#d4ff2a] to-green-400 bg-clip-text text-transparent">
          Master Your Money
        </span>
      </h2>
      <p class="text-lg text-gray-400 max-w-2xl mx-auto">
        Track, manage, and optimize your financesâ€”all through simple conversations in Telegram.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 gap-6">
      {features.map((feature) => (
        <div class={`group relative bg-gray-900/50 border rounded-2xl p-8 transition-all duration-300 ${feature.comingSoon ? 'border-gray-700 opacity-75' : 'border-gray-800 hover:border-[#d4ff2a]/50'}`}>
          <!-- Hover glow effect -->
          {!feature.comingSoon && (
            <div class="absolute inset-0 bg-[#d4ff2a]/5 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
          )}

          <!-- Coming Soon Badge -->
          {feature.comingSoon && (
            <div class="absolute -top-3 -right-3 bg-[#d4ff2a] text-black text-xs font-bold px-3 py-1 rounded-full">
              Coming Soon
            </div>
          )}

          <div class="relative">
            <!-- Icon -->
            <div class={`w-12 h-12 mb-4 rounded-xl flex items-center justify-center transition-colors ${feature.comingSoon ? 'bg-gray-700/30' : 'bg-[#d4ff2a]/10 group-hover:bg-[#d4ff2a]/20'}`}>
              <svg
                class={`w-6 h-6 ${feature.comingSoon ? 'text-gray-500' : 'text-[#d4ff2a]'}`}
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d={feature.iconPath} />
              </svg>
            </div>

            <!-- Title -->
            <h3 class={`text-xl font-semibold mb-3 ${feature.comingSoon ? 'text-gray-300' : 'text-white'}`}>{feature.title}</h3>

            <!-- Description -->
            <p class={`leading-relaxed ${feature.comingSoon ? 'text-gray-500' : 'text-gray-400'}`}>{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
