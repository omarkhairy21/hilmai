---
// Retirement Calculator Component
---

<div class="retirement-calculator max-w-4xl mx-auto">
  <!-- Calculator Form -->
  <div class="bg-gray-900/50 border border-gray-800 rounded-2xl p-8 mb-8">
    <h3 class="text-2xl font-bold text-white mb-6">Calculate Your Retirement Needs</h3>
    
    <div class="space-y-6">
      <!-- Current Age -->
      <div>
        <label for="current-age" class="block text-sm font-medium text-gray-300 mb-2">
          Current Age
        </label>
        <input
          type="number"
          id="current-age"
          class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-[#d4ff2a] focus:ring-1 focus:ring-[#d4ff2a] transition-colors"
          placeholder="30"
          min="18"
          max="100"
          step="1"
        />
      </div>

      <!-- Retirement Age -->
      <div>
        <label for="retirement-age" class="block text-sm font-medium text-gray-300 mb-2">
          Target Retirement Age
        </label>
        <input
          type="number"
          id="retirement-age"
          class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-[#d4ff2a] focus:ring-1 focus:ring-[#d4ff2a] transition-colors"
          placeholder="65"
          min="18"
          max="100"
          step="1"
        />
      </div>

      <!-- Current Savings -->
      <div>
        <label for="retirement-current-savings" class="block text-sm font-medium text-gray-300 mb-2">
          Current Retirement Savings
        </label>
        <div class="relative">
          <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">$</span>
          <input
            type="number"
            id="retirement-current-savings"
            class="w-full pl-8 pr-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-[#d4ff2a] focus:ring-1 focus:ring-[#d4ff2a] transition-colors"
            placeholder="50000"
            min="0"
            step="0.01"
            value="0"
          />
        </div>
      </div>

      <!-- Monthly Contribution -->
      <div>
        <label for="retirement-monthly-contribution" class="block text-sm font-medium text-gray-300 mb-2">
          Monthly Contribution
        </label>
        <div class="relative">
          <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">$</span>
          <input
            type="number"
            id="retirement-monthly-contribution"
            class="w-full pl-8 pr-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-[#d4ff2a] focus:ring-1 focus:ring-[#d4ff2a] transition-colors"
            placeholder="500"
            min="0"
            step="0.01"
          />
        </div>
      </div>

      <!-- Expected Return Rate -->
      <div>
        <label for="retirement-return-rate" class="block text-sm font-medium text-gray-300 mb-2">
          Expected Annual Return Rate (%)
        </label>
        <input
          type="number"
          id="retirement-return-rate"
          class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-[#d4ff2a] focus:ring-1 focus:ring-[#d4ff2a] transition-colors"
          placeholder="7"
          min="0"
          max="20"
          step="0.1"
          value="7"
        />
        <p class="mt-2 text-sm text-gray-500">Typical range: 6-8% for balanced portfolios</p>
      </div>

      <!-- Monthly Retirement Income Needed -->
      <div>
        <label for="retirement-income" class="block text-sm font-medium text-gray-300 mb-2">
          Monthly Retirement Income Needed
        </label>
        <div class="relative">
          <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">$</span>
          <input
            type="number"
            id="retirement-income"
            class="w-full pl-8 pr-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-[#d4ff2a] focus:ring-1 focus:ring-[#d4ff2a] transition-colors"
            placeholder="5000"
            min="0"
            step="0.01"
          />
        </div>
        <p class="mt-2 text-sm text-gray-500">Monthly income you'll need in retirement (in today's dollars)</p>
      </div>

      <!-- Calculate Button -->
      <button
        id="calculate-retirement"
        class="w-full px-6 py-3 bg-[#d4ff2a] text-black font-semibold rounded-lg hover:bg-[#c5f01a] transform hover:scale-105 transition-all shadow-lg shadow-[#d4ff2a]/20"
      >
        Calculate Retirement Plan
      </button>
    </div>
  </div>

  <!-- Results Section -->
  <div id="retirement-results" class="hidden">
    <!-- Projected Savings -->
    <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-6 mb-6">
      <h4 class="text-lg font-semibold text-white mb-4">Projected Retirement Savings</h4>
      <div class="text-center">
        <p id="projected-savings" class="text-4xl font-bold text-[#d4ff2a] mb-2">$0</p>
        <p class="text-gray-400">At age <span id="retirement-age-display">65</span></p>
      </div>
    </div>

    <!-- Retirement Needs -->
    <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-6 mb-6">
      <h4 class="text-lg font-semibold text-white mb-4">Retirement Needs (4% Rule)</h4>
      <div class="text-center">
        <p id="retirement-needed" class="text-4xl font-bold text-white mb-2">$0</p>
        <p class="text-gray-400">Based on monthly income of <span id="monthly-income-display">$0</span></p>
      </div>
    </div>

    <!-- Status -->
    <div id="retirement-status" class="bg-gray-900/50 border border-gray-800 rounded-xl p-6 mb-6">
      <h4 class="text-lg font-semibold text-white mb-4">Are You On Track?</h4>
      <div id="status-content" class="text-center">
        <!-- Status will be populated dynamically -->
      </div>
    </div>

    <!-- Summary -->
    <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-6">
      <h4 class="text-lg font-semibold text-white mb-4">Summary</h4>
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-gray-400">Years to Retirement:</span>
          <span id="years-to-retirement" class="text-white font-semibold">0</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-400">Current Savings:</span>
          <span id="summary-current-savings" class="text-white font-semibold">$0</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-400">Monthly Contribution:</span>
          <span id="summary-monthly-contribution" class="text-white font-semibold">$0</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-400">Expected Return:</span>
          <span id="summary-return-rate" class="text-white font-semibold">0%</span>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  import { calculateRetirement, formatCurrency } from '../../lib/calculators/retirement';

  const calculateBtn = document.getElementById('calculate-retirement') as HTMLButtonElement;
  const resultsSection = document.getElementById('retirement-results') as HTMLElement;

  calculateBtn.addEventListener('click', () => {
    const currentAge = parseFloat((document.getElementById('current-age') as HTMLInputElement).value);
    const retirementAge = parseFloat((document.getElementById('retirement-age') as HTMLInputElement).value);
    const currentSavings = parseFloat((document.getElementById('retirement-current-savings') as HTMLInputElement).value) || 0;
    const monthlyContribution = parseFloat((document.getElementById('retirement-monthly-contribution') as HTMLInputElement).value) || 0;
    const returnRate = parseFloat((document.getElementById('retirement-return-rate') as HTMLInputElement).value) || 7;
    const monthlyIncome = parseFloat((document.getElementById('retirement-income') as HTMLInputElement).value) || 0;

    if (!currentAge || currentAge <= 0) {
      alert('Please enter your current age');
      return;
    }

    if (!retirementAge || retirementAge <= currentAge) {
      alert('Please enter a valid retirement age');
      return;
    }

    if (monthlyContribution <= 0) {
      alert('Please enter your monthly contribution');
      return;
    }

    const result = calculateRetirement(
      currentAge,
      retirementAge,
      currentSavings,
      monthlyContribution,
      returnRate,
      monthlyIncome
    );

    // Update results
    document.getElementById('projected-savings')!.textContent = formatCurrency(result.retirementSavings);
    document.getElementById('retirement-age-display')!.textContent = retirementAge.toString();
    document.getElementById('retirement-needed')!.textContent = formatCurrency(result.totalRetirementNeeded);
    document.getElementById('monthly-income-display')!.textContent = formatCurrency(monthlyIncome);
    document.getElementById('years-to-retirement')!.textContent = (retirementAge - currentAge).toString();
    document.getElementById('summary-current-savings')!.textContent = formatCurrency(currentSavings);
    document.getElementById('summary-monthly-contribution')!.textContent = formatCurrency(monthlyContribution);
    document.getElementById('summary-return-rate')!.textContent = `${returnRate}%`;

    // Update status
    const statusContent = document.getElementById('status-content')!;
    if (result.isOnTrack) {
      statusContent.innerHTML = `
        <div class="text-green-400 text-2xl mb-2">✓ On Track!</div>
        <p class="text-gray-300">You're projected to have enough savings for retirement. Keep up the great work!</p>
      `;
      document.getElementById('retirement-status')!.classList.remove('border-red-500');
      document.getElementById('retirement-status')!.classList.add('border-green-500');
    } else {
      const requiredMonthly = result.shortfall > 0
        ? Math.round((result.shortfall / ((retirementAge - currentAge) * 12)) * 100) / 100
        : monthlyContribution;
      statusContent.innerHTML = `
        <div class="text-red-400 text-2xl mb-2">⚠️ Shortfall Detected</div>
        <p class="text-gray-300 mb-4">You're projected to be short by ${formatCurrency(result.shortfall)}.</p>
        <p class="text-gray-300">Consider increasing your monthly contribution to reach your goal.</p>
      `;
      document.getElementById('retirement-status')!.classList.remove('border-green-500');
      document.getElementById('retirement-status')!.classList.add('border-red-500');
    }

    resultsSection.classList.remove('hidden');
    resultsSection.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  });
</script>

