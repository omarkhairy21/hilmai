---
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import {
  BudgetIcon,
  EmergencyFundIcon,
  DebtPayoffIcon,
  SavingsGoalIcon,
  DebtToIncomeIcon,
  FinancialHealthIcon,
  BudgetPlannerIcon,
  RetirementIcon,
  InvestmentIcon,
  InstantTrackingIcon,
  AIInsightsIcon,
  MultipleWaysIcon
} from '../../components/icons/ToolIcons.tsx';
---

<Layout
  title="Free Financial Calculators & Tools | hilm.ai"
  description="Free financial calculators and tools to help you manage your money. Budget calculators, emergency fund calculator, and more financial planning tools."
  keywords="financial calculators, budget calculator, emergency fund calculator, financial tools, money management tools"
  image="/logo.png"
  canonical="/tools"
  ogType="website"
  author="hilm.ai"
>
  <!-- Hero Section -->
  <section class="relative py-12 md:py-16 px-4 bg-black overflow-hidden">
    <div class="absolute inset-0 opacity-30">
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500/20 rounded-full blur-3xl animate-pulse delay-1000"></div>
    </div>

    <div class="relative max-w-4xl mx-auto text-center z-10">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
        Free Financial Calculators
      </h1>
      <p class="text-lg md:text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
        Tools to help you budget, save, and plan your financial future. All calculators are free and easy to use.
      </p>
    </div>
  </section>

  <!-- Tools Grid -->
  <section class="py-12 px-4 bg-black">
    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- 50/30/20 Budget Calculator -->
        <a
          href="/tools/budget-calculator"
          class="group relative bg-gray-800/50 border border-gray-700 rounded-2xl p-8 hover:border-white/50 transition-all duration-300"
        >
          <div class="w-12 h-12 bg-gray-800/50 rounded-xl flex items-center justify-center mb-4 group-hover:bg-gray-800/70 transition-colors">
            <BudgetIcon className="w-6 h-6" client:load />
          </div>
          <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-white transition-colors">
            50/30/20 Budget Calculator
          </h3>
          <p class="text-gray-400 mb-4">
            Calculate your budget breakdown using the popular 50/30/20 rule. Divide your income into needs, wants, and savings.
          </p>
          <span class="text-blue-400 font-medium text-sm inline-flex items-center gap-1 group-hover:gap-2 transition-all">
            Use Calculator
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </span>
        </a>

        <!-- Emergency Fund Calculator -->
        <a
          href="/tools/emergency-fund"
          class="group relative bg-gray-800/50 border border-gray-700 rounded-2xl p-8 hover:border-white/50 transition-all duration-300"
        >
          <div class="w-12 h-12 bg-gray-800/50 rounded-xl flex items-center justify-center mb-4 group-hover:bg-gray-800/70 transition-colors">
            <EmergencyFundIcon className="w-6 h-6" client:load />
          </div>
          <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-white transition-colors">
            Emergency Fund Calculator
          </h3>
          <p class="text-gray-400 mb-4">
            Calculate how much you need in your emergency fund based on your monthly expenses and target coverage period.
          </p>
          <span class="text-blue-400 font-medium text-sm inline-flex items-center gap-1 group-hover:gap-2 transition-all">
            Use Calculator
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </span>
        </a>

        <!-- Debt Payoff Calculator -->
        <a
          href="/tools/debt-payoff"
          class="group relative bg-gray-800/50 border border-gray-700 rounded-2xl p-8 hover:border-white/50 transition-all duration-300"
        >
          <div class="w-12 h-12 bg-gray-800/50 rounded-xl flex items-center justify-center mb-4 group-hover:bg-gray-800/70 transition-colors">
            <DebtPayoffIcon className="w-6 h-6" client:load />
          </div>
          <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-white transition-colors">
            Debt Payoff Calculator
          </h3>
          <p class="text-gray-400 mb-4">
            Create a strategic plan to eliminate debt faster. Compare debt snowball vs avalanche methods and see your payoff timeline.
          </p>
          <span class="text-blue-400 font-medium text-sm inline-flex items-center gap-1 group-hover:gap-2 transition-all">
            Use Calculator
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </span>
        </a>

        <!-- Savings Goal Calculator -->
        <a
          href="/tools/savings-goal"
          class="group relative bg-gray-800/50 border border-gray-700 rounded-2xl p-8 hover:border-white/50 transition-all duration-300"
        >
          <div class="w-12 h-12 bg-gray-800/50 rounded-xl flex items-center justify-center mb-4 group-hover:bg-gray-800/70 transition-colors">
            <SavingsGoalIcon className="w-6 h-6" client:load />
          </div>
          <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-white transition-colors">
            Savings Goal Calculator
          </h3>
          <p class="text-gray-400 mb-4">
            Plan and track progress toward specific financial goals. Calculate required monthly contributions or timeline to reach your target.
          </p>
          <span class="text-blue-400 font-medium text-sm inline-flex items-center gap-1 group-hover:gap-2 transition-all">
            Use Calculator
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </span>
        </a>

        <!-- Debt-to-Income Calculator -->
        <a
          href="/tools/debt-to-income"
          class="group relative bg-gray-800/50 border border-gray-700 rounded-2xl p-8 hover:border-white/50 transition-all duration-300"
        >
          <div class="w-12 h-12 bg-gray-800/50 rounded-xl flex items-center justify-center mb-4 group-hover:bg-gray-800/70 transition-colors">
            <DebtToIncomeIcon className="w-6 h-6" client:load />
          </div>
          <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-white transition-colors">
            Debt-to-Income Calculator
          </h3>
          <p class="text-gray-400 mb-4">
            Calculate your DTI ratio to assess your ability to manage monthly payments. Important metric for loan approval and financial health.
          </p>
          <span class="text-blue-400 font-medium text-sm inline-flex items-center gap-1 group-hover:gap-2 transition-all">
            Use Calculator
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </span>
        </a>

        <!-- Financial Health Score -->
        <a
          href="/tools/financial-health"
          class="group relative bg-gray-800/50 border border-gray-700 rounded-2xl p-8 hover:border-white/50 transition-all duration-300"
        >
          <div class="w-12 h-12 bg-gray-800/50 rounded-xl flex items-center justify-center mb-4 group-hover:bg-gray-800/70 transition-colors">
            <FinancialHealthIcon className="w-6 h-6" client:load />
          </div>
          <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-white transition-colors">
            Financial Health Score
          </h3>
          <p class="text-gray-400 mb-4">
            Get a comprehensive assessment of your financial well-being. Answer questions to receive a score and personalized recommendations.
          </p>
          <span class="text-blue-400 font-medium text-sm inline-flex items-center gap-1 group-hover:gap-2 transition-all">
            Use Calculator
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </span>
        </a>

        <!-- Budget Planner -->
        <a
          href="/tools/budget-planner"
          class="group relative bg-gray-800/50 border border-gray-700 rounded-2xl p-8 hover:border-white/50 transition-all duration-300"
        >
          <div class="w-12 h-12 bg-gray-800/50 rounded-xl flex items-center justify-center mb-4 group-hover:bg-gray-800/70 transition-colors">
            <BudgetPlannerIcon className="w-6 h-6" client:load />
          </div>
          <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-white transition-colors">
            Monthly Budget Planner
          </h3>
          <p class="text-gray-400 mb-4">
            Create a detailed monthly budget plan. Allocate your income across categories and track planned vs actual spending.
          </p>
          <span class="text-blue-400 font-medium text-sm inline-flex items-center gap-1 group-hover:gap-2 transition-all">
            Use Calculator
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </span>
        </a>

        <!-- Retirement Calculator -->
        <a
          href="/tools/retirement-calculator"
          class="group relative bg-gray-800/50 border border-gray-700 rounded-2xl p-8 hover:border-white/50 transition-all duration-300"
        >
          <div class="w-12 h-12 bg-gray-800/50 rounded-xl flex items-center justify-center mb-4 group-hover:bg-gray-800/70 transition-colors">
            <RetirementIcon className="w-6 h-6" client:load />
          </div>
          <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-white transition-colors">
            Retirement Calculator
          </h3>
          <p class="text-gray-400 mb-4">
            Determine how much you need to save for retirement. Calculate required contributions and see if you're on track.
          </p>
          <span class="text-blue-400 font-medium text-sm inline-flex items-center gap-1 group-hover:gap-2 transition-all">
            Use Calculator
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </span>
        </a>

        <!-- Investment Return Calculator -->
        <a
          href="/tools/investment-calculator"
          class="group relative bg-gray-800/50 border border-gray-700 rounded-2xl p-8 hover:border-white/50 transition-all duration-300"
        >
          <div class="w-12 h-12 bg-gray-800/50 rounded-xl flex items-center justify-center mb-4 group-hover:bg-gray-800/70 transition-colors">
            <InvestmentIcon className="w-6 h-6" client:load />
          </div>
          <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-white transition-colors">
            Investment Return Calculator
          </h3>
          <p class="text-gray-400 mb-4">
            Project future investment value based on initial investment, monthly contributions, return rate, and time period.
          </p>
          <span class="text-blue-400 font-medium text-sm inline-flex items-center gap-1 group-hover:gap-2 transition-all">
            Use Calculator
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </span>
        </a>
      </div>
    </div>
  </section>

  <!-- Enhanced CTA Section -->
  <section class="py-16 px-4 bg-black">
    <div class="max-w-5xl mx-auto">
      <div class="bg-gray-900/50 border-2 border-gray-800 rounded-3xl p-10 md:p-14 text-center relative overflow-hidden">
        <!-- Background decoration -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-gray-800/50 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-white/5 rounded-full blur-3xl"></div>
        
        <div class="relative z-10">
          <div class="inline-block bg-gray-800/50 border border-gray-700 rounded-full px-4 py-2 mb-6">
            <p class="text-sm font-semibold text-white">ðŸš€ Start Your Financial Journey Today</p>
          </div>
          
          <h3 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Plan with Calculators. Track with hilm.ai.
          </h3>
          <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto leading-relaxed">
            You've used our calculators to plan your financesâ€”now make it happen. hilm.ai automatically tracks every expense and savings deposit, so you can see your progress in real-time and stay on track with your goals.
          </p>

          <!-- Benefits Grid -->
          <div class="grid md:grid-cols-3 gap-4 mb-10 max-w-3xl mx-auto">
            <div class="bg-black/40 rounded-xl p-4 border border-gray-800">
              <div class="mb-2 flex justify-center">
                <InstantTrackingIcon className="w-8 h-8" client:load />
              </div>
              <p class="text-sm text-gray-300 font-medium">Instant Tracking</p>
              <p class="text-xs text-gray-400 mt-1">Log expenses in seconds</p>
            </div>
            <div class="bg-black/40 rounded-xl p-4 border border-gray-800">
              <div class="mb-2 flex justify-center">
                <AIInsightsIcon className="w-8 h-8" client:load />
              </div>
              <p class="text-sm text-gray-300 font-medium">AI Insights</p>
              <p class="text-xs text-gray-400 mt-1">Get personalized recommendations</p>
            </div>
            <div class="bg-black/40 rounded-xl p-4 border border-gray-800">
              <div class="mb-2 flex justify-center">
                <MultipleWaysIcon className="w-8 h-8" client:load />
              </div>
              <p class="text-sm text-gray-300 font-medium">Multiple Ways</p>
              <p class="text-xs text-gray-400 mt-1">Text, voice, or photos</p>
            </div>
          </div>

          <a
            href="https://t.me/hilmaibot"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-10 py-5 bg-white text-black font-bold text-lg rounded-xl hover:bg-gray-100 transform hover:scale-105 transition-all shadow-2xl shadow-white/40 group"
          >
            Start Your Free Trial
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="group-hover:translate-x-1 transition-transform">
              <path d="M5 12h14M12 5l7 7-7 7" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.5;
    }
  }

  .animate-pulse {
    animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .delay-1000 {
    animation-delay: 1s;
  }
</style>

