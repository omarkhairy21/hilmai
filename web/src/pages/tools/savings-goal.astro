---
import Layout from '../../layouts/Layout.astro';
import SavingsGoalCalculator from '../../components/calculators/SavingsGoalCalculator.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="Savings Goal Calculator - Free Savings Calculator | hilm.ai"
  description="Plan and track progress toward specific financial goals. Calculate required monthly contributions or timeline to reach your target."
  keywords="savings goal calculator, savings calculator, how much to save monthly, financial goals calculator"
  image="/logo.png"
  canonical="/tools/savings-goal"
  ogType="website"
  author="hilm.ai"
>
  <!-- Hero Section -->
  <section class="relative py-12 md:py-16 px-4 bg-gradient-to-b from-black to-gray-900 overflow-hidden">
    <div class="absolute inset-0 opacity-30">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-[#d4ff2a]/20 rounded-full blur-3xl animate-pulse"></div>
    </div>

    <div class="relative max-w-4xl mx-auto text-center z-10">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
        Savings Goal Calculator
      </h1>
      <p class="text-lg md:text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
        Plan and track progress toward specific financial goals. Calculate required monthly contributions or timeline to reach your target.
      </p>
    </div>
  </section>

  <!-- Calculator Section -->
  <section class="py-12 px-4 bg-gray-900">
    <div class="max-w-6xl mx-auto">
      <SavingsGoalCalculator />
    </div>
  </section>

  <!-- About Section -->
  <section class="py-12 px-4 bg-black">
    <div class="max-w-4xl mx-auto">
      <div class="prose prose-invert max-w-none">
        <h2 class="text-3xl font-bold text-white mb-6">How to Use This Calculator</h2>
        
        <p class="text-gray-300 mb-4 leading-relaxed">
          This calculator helps you plan for any savings goal—whether it's a down payment, vacation, emergency fund, or major purchase. You can calculate in two ways:
        </p>

        <h3 class="text-2xl font-semibold text-white mt-8 mb-4">Calculate Timeline</h3>
        <p class="text-gray-300 mb-4 leading-relaxed">
          Enter your target amount, current savings, and monthly contribution to see how long it will take to reach your goal.
        </p>

        <h3 class="text-2xl font-semibold text-white mt-8 mb-4">Calculate Required Contribution</h3>
        <p class="text-gray-300 mb-4 leading-relaxed">
          Enter your target amount, current savings, and desired timeline to see how much you need to save each month.
        </p>

        <h3 class="text-2xl font-semibold text-white mt-8 mb-4">Tips for Reaching Your Goals</h3>
        <ul class="space-y-2 text-gray-300 mb-6">
          <li class="flex items-start gap-2">
            <span class="text-[#d4ff2a] mt-1">•</span>
            <span><strong>Automate savings:</strong> Set up automatic transfers to a dedicated savings account</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-[#d4ff2a] mt-1">•</span>
            <span><strong>Use high-yield accounts:</strong> Earn interest while you save</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-[#d4ff2a] mt-1">•</span>
            <span><strong>Review regularly:</strong> Adjust your timeline or contribution as needed</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-[#d4ff2a] mt-1">•</span>
            <span><strong>Track progress:</strong> Use hilm.ai to monitor your savings growth</span>
          </li>
        </ul>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 px-4 bg-gradient-to-b from-gray-900 via-black to-black">
    <div class="max-w-5xl mx-auto">
      <div class="bg-gradient-to-br from-[#d4ff2a]/20 via-[#d4ff2a]/10 to-green-500/10 border-2 border-[#d4ff2a]/40 rounded-3xl p-10 md:p-14 text-center relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-[#d4ff2a]/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-green-500/10 rounded-full blur-3xl"></div>
        
        <div class="relative z-10">
          <h3 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Track Your Savings Goals with hilm.ai
          </h3>
          <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto leading-relaxed">
            Log every savings deposit and watch your progress toward your goal. Get personalized insights and stay motivated as you build your savings.
          </p>
          <a
            href="https://t.me/hilmaibot"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-10 py-5 bg-[#d4ff2a] text-black font-bold text-lg rounded-xl hover:bg-[#c5f01a] transform hover:scale-105 transition-all shadow-2xl shadow-[#d4ff2a]/40 group"
          >
            Start Tracking Free
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="group-hover:translate-x-1 transition-transform">
              <path d="M5 12h14M12 5l7 7-7 7" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

