---
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout
  title={`${post.data.title} - hilm.ai Blog`}
  description={post.data.description || post.data.title}
  keywords={post.data.tags?.join(', ') || 'finance, tips'}
  image={post.data.image || '/logo.png'}
  canonical={`/blog/${post.slug}`}
  ogType="article"
  author={post.data.author || 'hilm.ai'}
>
  <article class="min-h-screen px-4 py-20">
    <div class="max-w-3xl mx-auto">
      <!-- Back link -->
      <a
        href="/blog"
        class="inline-flex items-center gap-2 text-gray-400 hover:text-[#d4ff2a] transition-colors mb-8"
      >
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Back to blog
      </a>

      <!-- Article header -->
      <header class="mb-12">
        <time class="text-sm text-gray-500 mb-4 block">
          {post.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          {post.data.title}
        </h1>
        <div class="flex items-center gap-4">
          <span class="text-gray-400">By {post.data.author}</span>
          {post.data.tags && post.data.tags.length > 0 && (
            <div class="flex gap-2">
              {post.data.tags.map((tag: string) => (
                <span class="text-xs bg-gray-800 px-3 py-1 rounded-full">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </div>
      </header>

      <!-- Article content -->
      <div class="prose prose-invert prose-lg max-w-none">
        <Content />
      </div>
    </div>
  </article>

  <Footer />

  <!-- Article Structured Data -->
  <script type="application/ld+json" is:inline set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'BlogPosting',
    'headline': post.data.title,
    'description': post.data.description || post.data.title,
    'image': post.data.image ? `https://hilm.ai${post.data.image}` : 'https://hilm.ai/logo.png',
    'datePublished': post.data.pubDate.toISOString(),
    'dateModified': post.data.updatedDate ? post.data.updatedDate.toISOString() : post.data.pubDate.toISOString(),
    'author': {
      '@type': 'Organization',
      'name': post.data.author || 'hilm.ai',
      'url': 'https://hilm.ai'
    },
    'publisher': {
      '@type': 'Organization',
      'name': 'hilm.ai',
      'logo': {
        '@type': 'ImageObject',
        'url': 'https://hilm.ai/logo.png'
      }
    },
    'mainEntityOfPage': {
      '@type': 'WebPage',
      '@id': `https://hilm.ai/blog/${post.slug}`
    },
    'keywords': post.data.tags?.join(', ') || 'finance, tips'
  })} />
</Layout>

<style is:global>
  .prose {
    color: #e5e7eb;
  }
  .prose h1, .prose h2, .prose h3, .prose h4 {
    color: #fff;
    font-weight: 700;
  }
  .prose h2 {
    font-size: 2rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  .prose h3 {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  .prose p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }
  .prose a {
    color: #d4ff2a;
    text-decoration: none;
  }
  .prose a:hover {
    text-decoration: underline;
  }
  .prose ul, .prose ol {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }
  .prose li {
    margin-bottom: 0.5rem;
  }
  .prose strong {
    color: #fff;
    font-weight: 600;
  }
  .prose code {
    background: #1f2937;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }
</style>
